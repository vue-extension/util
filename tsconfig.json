{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "removeComments": false,
    "lib": [
      "es6",
      "es7",
      "DOM"
    ],
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "typings/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}